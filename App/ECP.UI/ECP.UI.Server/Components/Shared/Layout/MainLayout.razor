@inherits LayoutComponentBase


<MudThemeProvider @rendermode="InteractiveServer"/>
<MudPopoverProvider @rendermode="InteractiveServer" />

<MudDialogProvider @rendermode="InteractiveServer" />
<MudSnackbarProvider @rendermode="InteractiveServer" />

<MudLayout Class="d-flex flex-column" Style="height: 100vh;">
    <NavMenuWrapper @rendermode="RenderMode.InteractiveAuto"></NavMenuWrapper>

    <MudMainContent Class="flex-grow-1 d-flex">
        <MudContainer MaxWidth="MaxWidth.ExtraLarge" Gutters="true" Class="px-5 d-flex flex-column flex-grow-1">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    private bool _drawerOpen = false;

    private void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}
