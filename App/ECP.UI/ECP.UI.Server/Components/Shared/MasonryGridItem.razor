<div class="masonry-item">
    <div class="masonry-content">
        @if (!string.IsNullOrWhiteSpace(Artwork.WebImage.Url))
        {
            <img src="@Artwork.WebImage.Url" alt="@Artwork.Title" class="item-image" />
        }
        else
        {
            <div class="placeholder-image">
                <p>No Image</p>
            </div>
        }
        <div class="item-info">
            <h5 class="title">@Artwork.Title</h5>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public ArtworkPreview Artwork { get; set; }
}
