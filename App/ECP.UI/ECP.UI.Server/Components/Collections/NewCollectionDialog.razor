<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h5" Align="Align.Center" Class="ma-0 mt-3" Style="font-weight: 300; color: var(--mud-palette-text-primary);">
            Create New Collection
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="_collectionName"
                      Label="Collection Name"
                      Placeholder="Eg. 'Renaissance paintings'"
                      Clearable="true"
                      Variant="Variant.Outlined"
                      Required = "true"
                      Immediate="true"
                        />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" Disabled="@(string.IsNullOrWhiteSpace(_collectionName))" OnClick="Submit">Create</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter]
    private IMudDialogInstance? MudDialog { get; set; }

    private string? _collectionName;

    private void Submit() => MudDialog.Close(DialogResult.Ok(_collectionName));

    private void Cancel() => MudDialog.Cancel();
}
